{
  "scripts": {
    "test": "jest",
    "compile": "mkdir src/proto && grpc_tools_node_protoc --ts_out=import_style=commonjs,binary:./src/proto --grpc_out=grpc_js:./src/proto --proto_path=./proto ./proto/*.proto",
    "build": "npm run compile && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "google-protobuf": "^3.21.4"
  },
  "license": "Apache-2.0",
  "name": "sendlix",
  "version": "1.1.0",
  "description": "Send emails using Sendlix API",
  "author": "Sendlix",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.3.5",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^30.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "grpc-tools": "^1.13.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "protoc-gen-ts": "^0.8.7",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendlix/nodejs.git"
  },
  "homepage": "nodejs.docs.sendlix.com",
  "engines": {
    "node": ">=18.20.8"
  },
  "keywords": [
    "sendlix",
    "email",
    "api",
    "sdk"
  ],
  "bugs": {
    "url": "https://github.com/sendlix/nodejs/issues"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "."
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
