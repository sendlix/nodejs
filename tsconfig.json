{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node", "jest"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "strict": true,
    "target": "es6"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
